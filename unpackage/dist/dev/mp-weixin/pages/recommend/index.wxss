/**
 * 如果你是App开发者（插件使用者），你可以通过修改这些变量来定制自己的插件主题，实现自定义主题功能
 *
 * 如果你的项目同样使用了scss预处理，你也可以直接在你的 scss 代码中使用如下变量，同时无需 import 这个文件
 */
.recommend {
  padding: 100px 0 70px 0;
  box-sizing: border-box;
}
.recommend-item {
  border-bottom: 1px solid #c1c1c1;
  padding: 24px 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.recommend-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 6px 14px;
}
.recommend-item-header .recommend-item-header-left {
  display: flex;
  align-items: center;
  column-gap: 10px;
}
.recommend-item-header .recommend-item-header-left .recommend-item-avatar {
  width: 45px;
  height: 45px;
  border-radius: 50%;
  flex-shrink: 0;
}
.recommend-item-header .recommend-item-header-right {
  width: 45px;
  height: 45px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.recommend-item-header .recommend-item-header-right .city-icon {
  font-size: 20px;
}
.recommend-item-img {
  width: 100%;
  height: 400px;
  max-height: 700px;
  object-fit: cover;
  margin-top: 10px;
  object-fit: cover;
}
.recommend-item-body {
  padding: 20rpx 25rpx;
}
.recommend-item-body .recommend-options {
  display: flex;
  align-items: center;
}
.recommend-item-body .recommend-options-item {
  height: 50px;
  padding: 0 20px;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
}
.recommend-item-body .recommend-options-item .city-icon {
  color: #111;
  font-size: 30px;
}
.recommend-item-body .recommend-discuss-content {
  display: flex;
  column-gap: 8px;
  font-size: 16px;
  margin-top: 15px;
}
.recommend-item-body .recommend-discuss-content .recommend-discuss-avatar {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  margin-top: 2px;
  flex-shrink: 0;
}
.recommend-item-pos-address {
  font-size: 14px;
  margin-left: 8px;
  color: #333;
  display: flex;
  align-items: center;
  column-gap: 5px;
  margin-top: 20px;
}