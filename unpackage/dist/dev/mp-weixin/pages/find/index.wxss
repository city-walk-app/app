/**
 * 如果你是App开发者（插件使用者），你可以通过修改这些变量来定制自己的插件主题，实现自定义主题功能
 *
 * 如果你的项目同样使用了scss预处理，你也可以直接在你的 scss 代码中使用如下变量，同时无需 import 这个文件
 */
.find {
  padding: 100px 15px 70px 15px;
  box-sizing: border-box;
}
.find-all {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-gap: 20px;
  justify-content: center;
}
.find-all .find-item {
  background-color: #fff;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 12px 12px 10px #f3f3f3, -12px -12px 10px #f3f3f3;
}
.find-all .find-item-banner {
  width: 100%;
  height: 120px;
  object-fit: cover;
}
.find-all .find-item-inner {
  padding: 6px 13px 20px 13px;
  box-sizing: border-box;
}
.find-all .find-item-inner .find-item-address {
  font-size: 18px;
  color: #333;
}
.find-all .find-item-inner .find-item-introduce {
  font-size: 15px;
  margin-top: 5px;
  color: #111;
}